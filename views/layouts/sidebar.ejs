<aside class="main-sidebar">

  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">

    <!-- Sidebar user panel (optional) -->
    <div class="user-panel">
      <div class="pull-left image">
        <img src="/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
      </div>
      <div class="pull-left info">
        <p id="user_name"></p>
        <!-- Status -->
        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
      </div>
    </div>


    <!-- Sidebar Menu -->
    <ul class="sidebar-menu" data-widget="tree">
      <li class="header"></li>
      <!-- Optionally, you can add icons to the links -->
      <li class="<% if(sidebar == 'dashboard'){ %> active <% } %>"><a href="/dashboard/index"><i
            class="fa fa-dashboard"></i> <span>Enquiry</span></a></li>

      <li
        class="treeview <% if(sidebar == 'create-banner' || sidebar == 'listing-banner' || sidebar == 'banner'){ %> active <% } %>">
        <a href="#"><i class="fa fa-list-alt"></i> <span>Banner</span>
          <span class="pull-right-container">
            <i class="fa fa-angle-left pull-right"></i>
          </span>
        </a>
        <ul class="treeview-menu">
          <li class="<% if(sidebar == 'listing-banner'){ %> active <% } %>"><a href="/banner/list"><i
                class="fa fa-list"></i>List</a></li>
          <li class="<% if(sidebar == 'create-banner'){ %> active <% } %>"><a href="/banner/create"><i
                class="fa fa-edit"></i>Create</a></li>
        </ul>
      </li>
      <li
        class="treeview <% if(sidebar == 'create-category' || sidebar == 'listing-category' || sidebar == 'category'){ %> active <% } %>">
        <a href="#"><i class="fa fa-list-alt"></i> <span>Category</span>
          <span class="pull-right-container">
            <i class="fa fa-angle-left pull-right"></i>
          </span>
        </a>
        <ul class="treeview-menu">
          <li class="<% if(sidebar == 'listing-category'){ %> active <% } %>"><a href="/category/list"><i
                class="fa fa-list"></i>List</a></li>
          <li class="<% if(sidebar == 'create-category'){ %> active <% } %>"><a href="/category/create"><i
                class="fa fa-edit"></i>Create</a></li>
        </ul>
      </li>




    </ul>
    <!-- /.sidebar-menu -->
  </section>
  <!-- /.sidebar -->
</aside>

<div class="control-sidebar-bg"></div>