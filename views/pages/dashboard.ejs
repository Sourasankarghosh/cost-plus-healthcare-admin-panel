<!DOCTYPE html>
<html>

<head>
  <%- include('../layouts/head') %>
</head>

<body class="hold-transition skin-blue sidebar-mini">
  <style type="text/css">
    .message {
      color: #3c763d;
      background-color: #dff0d8;
      border-color: #d6e9c6;
      padding: 15px;
      margin-bottom: 20px;
      border: 1px solid transparent;
      border-radius: 4px;
    }
  </style>
  <div class="wrapper">
    <%- include('../layouts/header') %>

      <div class="content-wrapper">

        <section class="content">
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Enquiry Listing</h3>
            </div>

            <div class="box-body table-responsive">
              <table id="enquiry-list" class="table table-striped table-bordered" style="width:100%">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Mobile</th>
                    <th>EmailID</th>
                    <th>Address</th>
                    <th>Business Query</th>
                    <!-- <th>Status</th> -->
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>

                </tbody>
              </table>
            </div>

          </div>
        </section>
      </div>

      <%- include('../layouts/sidebar') %>

  </div>

  <!--modal-->
  <div class="modal fade" id="moreInfoModal" tabindex="-1" role="dialog" aria-labelledby="moreInfoModal"
    aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel">More Info</h4>
        </div>
        <div class="modal-body">
          <p><b>Person Name:&nbsp;</b> <span id="name"></span></p>
          <p><b>Person Mobile No:&nbsp;</b> <span id="mobile"></span></p>
          <p><b>Person emailID:&nbsp;</b> <span id="emailID"></span></p>
          <p><b>Person Address:&nbsp;</b> <span id="address"></span></p>
          <p><b>District Of Distribution:&nbsp;</b> <span id="district_of_distribution"></span></p>
          <p><b>Pharma Licence Number:&nbsp;</b> <span id="pharma_licence_number"></span></p>
          <p><b>Purchase Period:&nbsp;</b> <span id="purchase_period"></span></p>
          <p><b>Investment:&nbsp;</b> <span id="investment"></span></p>
          <p><b>Preffered Time Of Call Back:&nbsp;</b> <span id="preffered_time_of_call_back"></span></p>
          <p><b>Profession:&nbsp;</b> <span id="profession"></span></p>
          <p><b>Business Query:&nbsp;</b> <span id="business_query"></span></p>
        </div>
      </div>
    </div>
  </div>
  <%- include('../layouts/footer') %>
    <!--canvas Chart-->
    <script type="text/javascript">
      let dataTable = '';
      $(document).ready(function () {
        dataTable = $("#enquiry-list").DataTable({
          "ajax": {
            url: "/dashboard/enquiry-data-table",
            type: 'GET'
          }
        });
      })
      function moreInfo(data) {
        $("#moreInfoModal").modal("show");
        Object.keys(data).forEach(item => {
          $("#" + item).text(data[item]);
        });

      }
    </script>

</body>

</html>